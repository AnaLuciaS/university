<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Lista de Matrículas</h1><br>
<fieldset>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Estudante</th>
      <th>Curso</th>
      <th>Data</th>
      <th>Opções</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
    
      <tr>
        <td><%= classroom.student_id %></td>
        <td><%= classroom.courses_id %></td>
        <td><%= classroom.entry_at %></td>
        <td><%= link_to 'Visualizar', classroom %></td>
        <td><%= link_to 'Editar', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Excluir', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</fieldset>
<br>

<%= link_to 'Nova Matrícula', new_classroom_path %><br>
